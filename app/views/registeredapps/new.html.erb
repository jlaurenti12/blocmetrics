<h1>New App</h1>

 <div class="row">
   <div class="col-md-8">
     <%= form_for @registeredapp do |f| %>
       <div class="form-group">
         <%= f.label :name %> <em>*</em>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter app name" %>
       </div>
       <div class="form-group">
         <%= f.label :url %> <em>*</em>
         <%= f.text_field :url, class: 'form-control', placeholder: "Enter app url" %>
       </div>
       <%= f.submit "Save", id: "register", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>
